@page
@model IndexModel
@{
    ViewData["Title"] = $"Профиль [{ViewData["MyCompanyName"]}]";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>
    @ViewData["Title"]
</h4>
@{
    if (@ViewData["Info"] != null)
    {
        <span class="badge badge-soft-primary">@ViewData["Info"]</span>
        <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String((byte[])ViewData["QR"]))" />
    }
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Input.Fullname"></label>
                <input asp-for="Input.Fullname" class="form-control" />
                <span asp-validation-for="Input.Fullname" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary mt-2">Сохранить</button>
        </div>
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ProfilePicture" style="width: 100%;"></label>
                @if (Model.Input.ProfilePicture != null)
                {
                    <img id="profilePicture" class="rounded" style="width:200px;height:200px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                }
                else
                {
                    <img id="profilePicture" class="rounded" style="width:200px;height:200px; object-fit:cover" src="">
                }
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="Input.ProfilePicture"
                       class="form-group"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

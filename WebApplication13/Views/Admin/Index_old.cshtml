@model IEnumerable<UserInfo>
@{
    ViewData["Title"] = "Панель администратора";
}

<div class="card">
    <div class="card-body">
        <!--
    <h4 class="card-title text-center text-secondary">Таблица пользователей</h4>
        -->
        <div class="table-responsive">
            <table class="table table-striped mb-0 table-bordered">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>ID</th>
                        <th></th>
                        <th>Логин</th>
                        <th>Email</th>
                        <th>ФИО</th>
                        <th>Права</th>
                        <th>Компания</th>
                        <th>Дополнительно</th>
                        <th>Редактирование</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row" style="font-size:80%" valign="middle">@item.User.Id</th>
                            <td style="align-content:center">
                                @try
                                {
                                    @if (@item.User.Photo != null)
                                    {
                                        <img style="width:50px;height:50px; object-fit:cover; border-radius:3px" src="data:image/*;base64,@(Convert.ToBase64String(@item.User.Photo))" alt="Header Avatar">
                                    }
                                }
                                catch
                                {

                                }
                            </td>
                            <td valign="middle" scope="row">@item.User.UserName</td>
                            <td valign="middle"><a href="mailto:@item.User.Email">@item.User.Email</a></td>
                            <td valign="middle">@item.User.FullName</td>
                            <td valign="middle">
                                @{
                                    foreach (var role in @item.Roles)
                                    {
                                        switch (role.ToLower())
                                        {
                                            case "superadmin":
                                                <span class="badge bg-dark">@role</span>
                                                break;
                                            case "admin":
                                                <span class="badge bg-info">@role</span>
                                                break;
                                            case "moderator":
                                                <span class="badge bg-soft-primary text-primary">@role</span>
                                                break;
                                            default:
                                                <span class="badge bg-light">@role</span>
                                                break;
                                        }
                                    }
                                }
                            </td>
                            <td valign="middle">@String.Join(", ", @item.Claims.Where(x => x.Type.ToLower() == "company").Select(y => y.Value))</td>


                            <td valign="middle" style="font-size:80%">
                                <!--String.Join(", ", item.Claims.Where(x => x.Type.ToLower() != "company").Select(x => x.Type + "=" + x.Value))-->
                                <ul class="card-text">
                                    @foreach (var cl in item.Claims.Where(x => x.Type.ToLower() != "company"))
                                    {
                                        <li>@cl.Type = @cl.Value</li>
                                    }
                                </ul>
                            </td>



                            <td valign="middle" style="width: 100px">
                                <a class="btn btn-outline-secondary btn-sm edit" title="Edit">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@model IEnumerable<FactPortal.Models.ServiceObject>
@{
    ViewData["Title"] = "ServiceList";
}

<div class="m-3 p-3 border">
    <div class="card bg-primary text-white-50">
        <div class="card-body">
            <h5 class="text-white"><i class="mdi mdi-hammer-wrench"></i> Список объектов для обслуживания</h5>
        </div>
    </div>
    <div class="d-flex flex-wrap">
        @foreach (var f in Model)
        {
            <div class="card" style="margin:3px">
                <div class="card-body" style="margin:5px">
                    <p class="card-title">
                        @f.ObjectTitle <span class="badge bg-light"> @f.ObjectCode</span>
                    </p>
                    <p class="card-title-desc">
                        @f.Description
                    </p>
                    
                        <ul class="card-text" style="font-size:80%">
                            @foreach (var cl in f.Claims)
                            {
                                <li>@cl.ClaimType = @cl.ClaimValue</li>
                            }
                        </ul>
                </div>
            </div>
        }
    </div>
</div>


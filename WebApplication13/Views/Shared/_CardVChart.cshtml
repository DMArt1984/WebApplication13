@model Object

@{ 
    string title = (@Model.GetType().GetProperty("title") != null) ? @Model.GetType().GetProperty("title").GetValue(@Model, null).ToString() : null;
    Object[] bars = (@Model.GetType().GetProperty("bars") != null) ? (@Model.GetType().GetProperty("bars").GetValue(@Model, null)) as Object[] : new Object[] { };
}

    <div class="card">
        <div class="card-body m-4">
            
            <div class="">
                <div class="pb-4">
                    <svg>
                        <ul class="vchart" style="position: absolute; top:0; left:0; padding:5px">
                            @foreach (var item in bars)
                            {
                                <li>
                                    <span style="height:100%; background: #f8f8f8"></span>
                                </li>
                            }
                        </ul>
                        <ul class="vchart" style="position: absolute; top:0; left:0; padding:5px">
                            @foreach (var item in bars)
                            {
                                string percent = item.GetType().GetProperty("percent").GetValue(item, null).ToString();
                                string value = item.GetType().GetProperty("value").GetValue(item, null).ToString();
                                string color = item.GetType().GetProperty("color").GetValue(item, null).ToString();

                                <li>
                                    <span style="height:@(percent)%; background: @color" title="@(value)"></span>
                                </li>
                            }
                        </ul>

                    </svg>
                </div>
                <hr />
                @if (!String.IsNullOrWhiteSpace(title))
                {
                    <h5 class="card-title text-center">@title</h5>
                }
                <div class="container-fluid">
                    <ul class="hr d-flex justify-content-around">
                        @foreach (var item in bars)
                        {
                            string text = item.GetType().GetProperty("text").GetValue(item, null).ToString();
                            string color = item.GetType().GetProperty("color").GetValue(item, null).ToString();

                            <li><i class="mdi mdi-circle font-size-12 me-1" style="color: @color"></i>@text</li>
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>
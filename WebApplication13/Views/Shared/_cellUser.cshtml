@model ApplicationUser


@if (!String.IsNullOrWhiteSpace(Model.Email))
{
    <a asp-controller="Admin" asp-action="Profile" asp-route-Email="@Model.Email">
        @if (!String.IsNullOrWhiteSpace(Model.UserName))
        {
            @Model.UserName <small>(@Model.Email)</small>
        }
        else
        {
            @Model.Email
        }
    </a>
}
else
{
    if (!String.IsNullOrWhiteSpace(Model.UserName))
    {
        @Model.UserName
    }
    else
    {
        <small class="text-danger"> Пользователь не известен </small>
    }
}

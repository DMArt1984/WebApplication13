}

    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-center">
                <!-- left -->
                @if (String.IsNullOrWhiteSpace(Model.icon))
                {
                    <div class="flex-shrink-0 me-3 align-self-center" style="position: relative;">
                        <div size="220" color="@Model.color" widthback="5" widthfront="7" class="circle">@Model.percent</div>
                    </div>
                }
                else
                {
                    <div class="flex-shrink-0  me-3 align-self-center">
                        <div class="avatar-sm">
                            <div class="avatar-title bg-light rounded-circle text-primary font-size-20">
                                <i class="@Model.icon"></i>
                            </div>
                        </div>
                    </div>
                }
                <!-- right -->
                <div class="flex-grow-1 overflow-hidden">
                    @if (!String.IsNullOrWhiteSpace(Model.title))
                    {
                        <p class="mb-1">@Model.title</p>
                    }
                    @if (!String.IsNullOrWhiteSpace(Model.titleNext))
                    {
                        <p class="mb-1">@Model.titleNext</p>
                    }
                    <h5 class="mb-3">@Model.value</h5>
                    @if (!String.IsNullOrWhiteSpace(Model.alpha))
                    {
                        @if (Model.alpha[0] == '-')
                        {
                            <p class="text-truncate mb-0"><span class="text-danger me-2"> @Model.alpha <i class="ri-arrow-right-down-line align-bottom ms-1"></i></span> @Model.description</p>
                        }
                        else
                        {
                            <p class="text-truncate mb-0"><span class="text-success me-2"> @Model.alpha <i class="ri-arrow-right-up-line align-bottom ms-1"></i></span> @Model.description</p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
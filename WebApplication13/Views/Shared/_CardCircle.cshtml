//string percent = (@Model.GetType().GetProperty("percent") != null) ? @Model.GetType().GetProperty("percent").GetValue(@Model, null).ToString()+"%" : null;
//string alpha = (@Model.GetType().GetProperty("alpha") != null) ? @Model.GetType().GetProperty("alpha").GetValue(@Model, null).ToString() : null;
//string description = (@Model.GetType().GetProperty("description") != null) ? @Model.GetType().GetProperty("description").GetValue(@Model, null).ToString() : null;

//string title = (@Model.GetType().GetProperty("title") != null) ? @Model.GetType().GetProperty("title").GetValue(@Model, null).ToString() : null;
//string titleNext = (@Model.GetType().GetProperty("titlenext") != null) ? @Model.GetType().GetProperty("titlenext").GetValue(@Model, null).ToString() : null;

@model List<AlertInfo>

@{
    int FilterSO = Convert.ToInt32(ViewData["ServiceObjectId"]); // выборка по объекту обслуживания
    bool IsAdmin = ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("SuperAdmin");
}

<!-- Таблица -->
<div class="card">
    <div class="card-body">
        <table id="datatable" class="table table-striped mb-0 table-bordered" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
            <thead class="bg-danger text-white">
                <tr>
                    <th>ID</th>
                    <th>Дата и время</th>
                    @if (FilterSO == 0)
                    {
                        <th>Объект</th>
                    }
                    <th>Статус</th>
                    <th>Сотрудник</th>
                    <th>Файлы</th>
                    <th>Подробнее</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderByDescending(x => x.DT))
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.DT</td>
                        @if (FilterSO == 0)
                        {
                            <td>
                                @Html.Partial("_cellSObject", new ServiceObject { Id = item.ServiceObjectId, ObjectTitle = item.ServiceObjectTitle, ObjectCode = null })
                            </td>
                        }
                        <td>@item.StatusRus()</td>
                        <td>
                            @Html.Partial("_cellUser", new ApplicationUser { Id = "0", UserName = item.UserName, Email = item.UserEmail })
                        </td>
                        <td>@Html.Partial("_FilesV", item.FileLinks)</td>
                        <td>
                            @if (IsAdmin)
                            {
                                <a class="btn btn-outline-secondary btn-sm edit" title="Редактировать" asp-action="AlertEdit" asp-route-Id="@item.Id" asp-route-ServiceObjectId="@FilterSO">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            }
                            <a class="btn btn-outline-secondary btn-sm edit" title="Просмотр" asp-action="AlertInfo" asp-route-Id="@item.Id" asp-route-ServiceObjectId="@FilterSO">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Добавить -->
    @if (IsAdmin && FilterSO > 0)
    {
        <div class="card-footer">
            <a class="btn btn-primary btn btn-block" title="Добавить" asp-action="AlertEdit" asp-route-Id="0" asp-route-ServiceObjectId="@FilterSO"><i class="fas fa-plus"></i> Добавить новое уведомление</a>
        </div>
    }
</div>



